<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarManager.View.SingleCarViewPage"
             xmlns:models="clr-namespace:CarManager.Model"
             x:DataType="models:Car"
             Title="{Binding Model}">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">
            <Label Text="Make"/>
            <Entry Text="{Binding Make}"/>
            <Label Text="Model" />
            <Entry Text="{Binding Model}" />
            <Label Text="Model Year" />
            <Switch IsToggled="{Binding ModelYear}" />
            <Button Text="Save"
                    Clicked="OnSaveClicked" />
            <Button Text="Delete"
                    Clicked="OnDeleteClicked" />
            <Button Text="Cancel"
                    Clicked="OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>   
</ContentPage>